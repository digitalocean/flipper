<% if params.key?("error") %>
  <div class="alert alert-danger">
    <%= params["error"] %>
  </div>
<% end %>

<div class="card">
  <h4 class="card-header">Enable domain SAN for <%= @feature.key %></h4>
  <div class="card-body">
    <p>
      Allow this feature to be changed by users with the following mTLS domain SAN.
    </p>
    <form action="<%= script_name %>/features/<%= @feature.key %>/allowed_sans" method="post" class="form-inline">
      <%== csrf_input_tag %>
      <input type="hidden" name="operation" value="enable">
      <input type="text" name="value" placeholder="ie: *.edge.staff.digitalocean.com" class="form-control mr-2">
      <input type="submit" value="Add domain SAN" class="btn btn-light">
    </form>
  </div>
</div>
